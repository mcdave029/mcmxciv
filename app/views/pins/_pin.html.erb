<div class="well box">
	<%= link_to (image_tag pin.image(:thumb)) ,pin %>
  <p class="description"><%= pin.description %></p>
  <p>
  	<strong>Posted by:	<%= pin.user.name %> </strong>
  </p>
  <div class="btn-group">
		<%= if current_user == pin.user; link_to 'Edit', edit_pin_path(pin), class: "btn btn-xs btn-success"; end %>
		<%= if current_user == pin.user; link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger";  end %>
	</div>
</div>